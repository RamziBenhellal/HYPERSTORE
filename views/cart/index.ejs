<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

	<div class="row mt-5">
		<div class="col-md-12 m-auto">
			<div class="panel panel-info">
				<div class="panel-heading">
					<div class="panel-title">
						<div class="row">
							<div class="col-md-6 m-auto">
								<h5><span class="glyphicon glyphicon-shopping-cart"></span> Shopping Cart</h5>
							</div>
							<div class="col-xs-4">
								<button type="button" class="btn btn-primary btn-sm btn-block">
									<span class="glyphicon glyphicon-share-alt"></span> Continue shopping
								</button>
							</div>
						</div>
					</div>
				</div>
				<div class="panel-body">
					<% items.forEach(function(item) { %>
					<div class="row col-md-24">
						<div class="col-xs-2"><img class="img-responsive" src="img/blank.jpg">
						</div>
						<div class="col-md-4">
							<h4 class="product-name"><strong><%- item.product.productName %></strong></h4><h4><small><%- item.product.description %></small></h4>
						    <h4><%- item.color.colorName %></h4> 
							<h4><%- item.size.sign %></h4>
						</div>
						<div class="col-md-6">
							<div class="col-xs-2 text-right">
								<h6><strong><%-item.article.price %> €<span class="text-muted">x</span></strong></h6>
							</div>
							<div class="col-md-2">
								<input type="text" class="form-control input-sm" value="<%-item.quantity %>">
							</div>
							<h6><strong><%- item.totalPrice %> €</strong></h6>
							<div class="col-md-1 ">
								<button type="button" class="btn btn-link btn-xs">
									<span class="glyphicon glyphicon-trash"> </span>
								</button>
							</div>
						</div>
					</div>
					<hr>
					<% }); %>
					
					<div class="row">
						<div class="text-center">
							<div class="col-xs-9">
								<h6 class="text-right">Added items?</h6>
							</div>
							<div class="col-xs-3">
								<button type="button" class="btn btn-default btn-sm btn-block">
									Update cart
								</button>
							</div>
						</div>
					</div>
				</div>
				<div class="panel-footer">
					<div class="row text-center">
						<div class="col-xs-9">
							<h4 class="text-right">Total <strong><%- total %> €</strong></h4>
						</div>
						<div class="col-xs-3">
							<button type="button" class="btn btn-success btn-block">
								<a href="/purshase/infovalidation">Checkout</a> 
							</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
